{% extends '::layout.html.twig' %}

{% block body %}
    <h1>Category list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="{{ path('category_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> show</a> &nbsp;
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> edit</a> &nbsp;
                        </li>
                        <li>
                            <a href="{{ path('category_delete', { 'id': entity.id }) }}"><i class="icon-trash"></i> delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn">Create a new Category</a>
{% endblock %}