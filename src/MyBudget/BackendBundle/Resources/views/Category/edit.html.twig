{% extends '::layout.html.twig' %}

{% block body %}
    <h1 class="mtn mbm">Editar Categor&iacute;a "{{ edit_form.vars.value.name }}"</h1>

    {% form_theme edit_form 'BackendBundle:Form:fields_errors.html.twig' %}

    <form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
        {{ form_errors(edit_form) }}

        <!-- Name field -->
        <div>
            {{ form_label(edit_form.name, 'Nombre') }}
            {{ form_widget(edit_form.name, { 'attr': { 'class': 'input-xxlarge' } }) }}
            {{ form_errors(edit_form.name) }}
        </div>

        <!-- Description field -->
        <div>
            {{ form_label(edit_form.description, 'Descripcion') }}
            {{ form_widget(edit_form.description, { 'attr': { 'class': 'h75p input-xxlarge' } }) }}
            {{ form_errors(edit_form.description) }}
        </div>

        {{ form_rest(edit_form) }}

        <p>
            <a class="mrl" href="{{ path('category') }}" title="Volver"><i class="icon-chevron-left"></i>Volver al listado</a>
            <a class="btn btn-danger mrl delete-confirmation" href="{{ path('category_delete', { 'id': entity.id }) }}" title="Borrar">Borrar</a>
            <button class="btn btn-success" type="submit">Editar</button>
        </p>
    </form>
{% endblock %}