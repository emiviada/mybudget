{% extends '::layout.html.twig' %}

{% block body %}
    <h1 class="mtn mbm">Editar Movimiento</h1>

    {% form_theme edit_form 'BackendBundle:Form:fields_errors.html.twig' %}

    <form action="{{ path('entry_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
        {{ form_errors(edit_form) }}

        <!-- Category field -->
        <div>
            {{ form_label(edit_form.category, 'Categoria') }}
            {{ form_widget(edit_form.category, { 'attr': { 'class': 'input-xxlarge' } }) }}
            {{ form_errors(edit_form.category) }}
        </div>

        <!-- Date entry field -->
        <div>
            {{ form_label(edit_form.date_entry, 'Fecha') }}
            {{ form_widget(edit_form.date_entry, { 'attr': { 'class': 'input-medium datepicker-field', 'autocomplete': 'off' } }) }}
            {{ form_errors(edit_form.date_entry) }}
        </div>

        <!-- Haber field -->
        <div class="mbm">
            {{ form_label(edit_form.haber, 'Haber', { 'attr': { 'class': 'bck1' } }) }}
            {{ form_widget(edit_form.haber, { 'attr': { 'class': 'input-xxlarge' } }) }}
            {{ form_errors(edit_form.haber) }}
        </div>

        <!-- Value field -->
        <div>
            {{ form_label(edit_form.value, 'Valor') }}
            {{ form_widget(edit_form.value, { 'attr': { 'class': 'input-medium' } }) }}
            {{ form_errors(edit_form.value) }}
        </div>

        <!-- Comment field -->
        <div>
            {{ form_label(edit_form.comment, 'Comentario') }}
            {{ form_widget(edit_form.comment, { 'attr': { 'class': 'h75p input-xxlarge' } }) }}
            {{ form_errors(edit_form.comment) }}
        </div>
    
        {{ form_rest(edit_form) }}

        <p>
            <a class="mrl" href="{{ path('entry') }}" title="Volver"><i class="icon-chevron-left"></i>Volver al listado</a>
            <a class="btn btn-danger mrl delete-confirmation" href="{{ path('entry_delete', { 'id': entity.id }) }}" title="Borrar">Borrar</a>
            <button class="btn btn-success" type="submit">Editar</button>
        </p>        
    </form>
{% endblock %}