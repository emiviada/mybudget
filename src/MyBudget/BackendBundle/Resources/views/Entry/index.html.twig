{% extends '::layout.html.twig' %}

{% block body %}
    <h1>Entry list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Haber</th>
                <th>Value</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entry_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.haber }}</td>
                <td>{{ entity.value }}</td>
                <td>{{ entity.comment }}</td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="{{ path('entry_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> show</a> &nbsp;
                        </li>
                        <li>
                            <a href="{{ path('entry_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> edit</a> &nbsp;
                        </li>
                        <li>
                            <a href="{{ path('entry_delete', { 'id': entity.id }) }}"><i class="icon-trash"></i> delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entry_new') }}" class="btn">Create a new Entry</a>
{% endblock %}