{% extends '::layout.html.twig' %}

{% block body %}
    <h1 class="mtn mbm">Editar Objetivo Mensual</h1>

    {% form_theme edit_form 'BackendBundle:Form:fields_errors.html.twig' %}

    <form action="{{ path('target_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
        {{ form_errors(edit_form) }}

        <!-- Month field -->
        <div>
            {{ form_label(edit_form.month, 'Mes') }}
            {{ form_widget(edit_form.month, { 'attr': { 'class': 'target-month' } }) }}
            {{ form_errors(edit_form.month) }}
        </div>

        <!-- Amount field -->
        <div>
            {{ form_label(edit_form.amount, 'Cantidad') }}
            {{ form_widget(edit_form.amount, { 'attr': { 'class': 'input-medium' } }) }}
            {{ form_errors(edit_form.amount) }}
        </div>

        <!-- Points field -->
        <div>
            {{ form_label(edit_form.points, 'Puntos') }}
            {{ form_widget(edit_form.points, { 'attr': { 'class': 'input-medium' } }) }}
            {{ form_errors(edit_form.points) }}
        </div>
    
        {{ form_rest(edit_form) }}

        <p>
            <a class="mrl" href="{{ path('target') }}" title="Volver"><i class="icon-chevron-left"></i>Volver al listado</a>
            <a class="btn btn-danger mrl delete-confirmation" href="{{ path('target_delete', { 'id': entity.id }) }}" title="Borrar">Borrar</a>
            <button class="btn btn-success" type="submit">Editar</button>
        </p>        
    </form>
{% endblock %}