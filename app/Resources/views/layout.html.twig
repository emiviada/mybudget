<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MyBudget{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/backend/css/style.css')}}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/backend/css/space.css')}}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/backend/jquery-ui-1.9.0/css/ui-lightness/jquery-ui-1.9.0.custom.min.css')}}" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <!-- Header -->
        <header class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('homepage') }}">My Budget</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <nav class="nav-collapse collapse">
                            <ul class="nav">
                                <li {% if(app.request.attributes.get('_route') == 'category') %}class="active"{% endif %}><a href="{{ path('category_list') }}">Categor&iacute;as</a></li>
                                <li {% if(app.request.attributes.get('_route') == 'entry') %}class="active"{% endif %}><a href="{{ path('entry_list') }}">Movimientos</a></li>
                                <li><a href="{{ path('logout') }}">Cerrar Sesi&oacute;n</a></li>
                            </ul>
                        </nav>
                    {% endif %}
                </div>
            </div>
        </header>
        
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="{{ asset('bundles/backend/js/jquery-1.8.2.min.js')}}"><\/script>')</script>
            <script src="{{ asset('bundles/backend/jquery-ui-1.9.0/js/jquery-ui-1.9.0.custom.min.js')}}"></script>
            <script src="{{ asset('bundles/backend/js/backend.js')}}"></script>
        {% endblock %}
    </body>
</html>
